<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @place["name"] %></h1>
    </div>
  </div>

  <div class="row">
    <% for entry in @entries %>
      <div class="col-md-4 mb-4">
        <h3><%= entry["title"] %></h3>
        <h4><%= entry["occurred_on"] %></h4>
        <p><%= entry["description"] %></p>

        <%# Conditionally display attached file if entry.uploaded_image.attached? %>
        <% if entry.uploaded_image.attached? %>
          <%# Use url_for(entry.uploaded_image) as attached file's URL %>
          <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid" alt="<%= entry["title"] %>">
        <% else %>
          <%# Otherwise, display the original image URL from the database column %>
          <img src="<%= entry["image"] %>" class="img-fluid" alt="<%= entry["title"] %>">
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p>
        <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
      </p>
      <p>
        <a href="/places" class="btn btn-secondary">Back to All Places</a>
      </p>
    </div>
  </div>
</div>
